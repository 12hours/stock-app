<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:camel="http://camel.apache.org/schema/spring"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd

         http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">


    <bean class="org.mockito.Mockito" factory-method="mock">
        <constructor-arg value="com.epam.mentoring.service.ProductService" />
    </bean>

    <bean id="mainRoute" class="com.epam.mentoring.routes.MainRoute"/>
    <bean id="productRoute" class="com.epam.mentoring.routes.ProductRoute"/>


    <camel:camelContext id="serviceRoutesContext"
                        streamCache="true">
        <camel:contextScan/>
        <camel:streamCaching id="cacheConfigId" spoolThreshold="-1"/>
    </camel:camelContext>

</beans>
